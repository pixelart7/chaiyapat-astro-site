---
import Note from '@layouts/Note.astro'

import { format, buildGraph } from 'src/store/garden';

export async function getStaticPaths() {
  return buildGraph(
      format((await Astro.glob('../../../content/garden/*.md'))
        .filter((post) => !post.frontmatter.draft)
      )
    )
}

const { frontmatter, title, post, post: { Content }, node } = Astro.props;
const headings = await post.getHeadings();
---

<Note
  title={frontmatter?.title || title}
  created={frontmatter?.created}
  updated={frontmatter?.updated}
  cover={frontmatter?.cover || String(new URL('ogimage-note.png', Astro.site))}
  abstract={frontmatter?.abstract}
  unlisted={frontmatter?.unlisted}
  node={node}
  headings={headings}
>
  <Content/>
</Note>